{
  "name": "UniqueTabs",
  "version": "0.0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "45.0",
  "description": "__MSG_extDescription__",
  "homepage_url": "http://github.com/agostonbarna/uniquetabs",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "__MSG_defaultTitle__"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ]
}
